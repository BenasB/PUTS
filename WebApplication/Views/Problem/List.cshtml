<environment include="Development">
    <link rel="stylesheet" href="~/css/list.css" />
</environment>
<environment exclude="Development">
    <link rel="stylesheet" href="~/css/list.min.css" asp-append-version="true" />
</environment>

@section scripts
{
    <script src="~/js/list.js"></script>
}

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Problems"];
}

@model List<Problem>
<partial name="DeletionModal" />

<div id="Title">
    <h1>@Localizer["Problems"]</h1>

    <a class="btn btn-success" asp-action="Create">@Localizer["New problem"]</a>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col" class="col-sm-2">@Localizer["Name"]</th>
            <th scope="col">@Localizer["Description"]</th>
            <th scope="col" class="col-sm-2 text-right">@Localizer["Settings"]</th>
        </tr>
    </thead>

    @{
        foreach (Problem p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.Description</td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@p.ProblemID">@Localizer["Edit"]</a>
                        <button data-id=@p.ProblemID type="button" class="btn btn-danger" data-toggle="modal" data-target="#deletionModal">@Localizer["Delete"]</button>
                    </div>
                </td>
            </tr>
        }
    }
</table>