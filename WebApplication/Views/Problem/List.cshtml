<environment include="Development">
    <link rel="stylesheet" href="~/css/list.css" />
</environment>
<environment exclude="Development">
    <link rel="stylesheet" href="~/css/list.min.css" asp-append-version="true" />
</environment>

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Problems"];
}

@model List<Problem>

<div id="Title">
    <h1>@Localizer["Problems"]</h1>

    <a class="btn btn-success" asp-action="Create">@Localizer["New problem"]</a>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col" class="col-sm-2">@Localizer["Name"]</th>
            <th scope="col">@Localizer["Description"]</th>
            <th scope="col" class="col-sm-2 text-right">@Localizer["Settings"]</th>
        </tr>
    </thead>

    @{
        foreach (Problem p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.Description</td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@p.ID">@Localizer["Edit"]</a>
                        <button data-id=@p.ID type="button" class="btn btn-danger" data-toggle="modal" data-target="#deletionModal">@Localizer["Delete"]</button>
                    </div>
                </td>
            </tr>
        }
    }
</table>

<!-- Modal Related -->
@section scripts 
    {
    <script>
        // This is probably not a great practise
        $(document).ready(function () {
            $('#deletionModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var clickedButtonId = button.data('id');

                document.getElementById("hiddenid").value = clickedButtonId;
            })
        });
    </script>
}

<!-- Deletion modal -->
<div class="modal fade" id="deletionModal" tabindex="-1" role="dialog" aria-labelledby="deletionModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deletionModalLabel">@Localizer["Confirm"]</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @Localizer["Are you sure that you want to delete this problem?"]
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">@Localizer["Cancel"]</button>
                <form method="post" asp-controller="Problem" asp-action="Delete" role="form">
                    <button type="submit" class="btn btn-danger">@Localizer["Delete"]</button>
                    <input name="id" type="hidden" id="hiddenid">
                </form>
            </div>
        </div>
    </div>
</div>