<link rel="stylesheet" href="~/css/create.css" />

@model Blog
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Write a blog"];
}

@using (Html.BeginForm("Create", "Blog", FormMethod.Post))
{
<div class="form-group">
    @Html.LabelFor(m => m.Title, new { @class = "control-label" })
    @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
    @Html.TextBoxFor(m => m.Title, new { @class = "form-control", autocomplete = "off", spellcheck = "false" })
</div>

<div class="form-group">
    @Html.LabelFor(m => m.Text, new { @class = "control-label" })
    @Html.ValidationMessageFor(m => m.Text, "", new { @class = "text-danger" })
    @Html.TextAreaFor(m => m.Text, new { @class = "form-control", autocomplete = "off", spellcheck = "false" })
</div>

<div class="form-group">
    <input type="submit" value="@Localizer["Create"]" class="btn btn-primary" />
</div>
}

<div>
    <a asp-action="Index" asp-controller="Home">@Localizer["Back"]</a>
</div>