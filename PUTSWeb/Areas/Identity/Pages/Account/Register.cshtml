@page
@model RegisterModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Sign Up"];
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label>@Localizer["Username"]</label>
                <input asp-for="Input.UserName" class="form-control" autocomplete="off" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>@Localizer["First name"]</label>
                <input asp-for="Input.FirstName" class="form-control" autocomplete="off" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>@Localizer["Last name"]</label>
                <input asp-for="Input.LastName" class="form-control" autocomplete="off" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>@Localizer["Group"]</label>
                <p class="text-muted explanation">@Localizer["Name of school and class"].Value</p>
                <input asp-for="Input.Group" class="form-control" autocomplete="off" />
                <span asp-validation-for="Input.Group" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>@Localizer["Password"]</label>              
                <input asp-for="Input.Password" class="form-control" autocomplete="off" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>@Localizer["Confirm password"]</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="off" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">@Localizer["Sign Up"]</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
